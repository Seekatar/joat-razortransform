<Window x:Class="PSHostGui.Prompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        ShowInTaskbar="False"
        Title="PowerShell Prompt" Closing="Window_Closing_1"
        SizeToContent="WidthAndHeight"
        MinWidth="300">
    <StackPanel Height="Auto">
        <TextBlock Name="txtPrompt" Margin="5">Prompt</TextBlock>
        <TextBlock Name="txtDescription"  Margin="30,5,5,5" Visibility="Collapsed"></TextBlock>
        <TextBox Name="tbEdit"  Margin="5,5,5,5" Visibility="Collapsed"></TextBox>
        <PasswordBox Name="pbEdit"  Margin="5,5,5,5" Visibility="Collapsed"></PasswordBox>
        <WrapPanel x:Name="stackPanel" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5"/>
    </StackPanel>
</Window>
