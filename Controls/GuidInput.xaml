<UserControl x:Class="RazorTransform.GuidInput"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Name="root" Margin="0" >
    <DockPanel>
        <Button Style="{StaticResource extraButton}" x:Name="theButton" DockPanel.Dock="Right"  Click="theButton_Click">
           +
        </Button>
        <TextBox Style="{StaticResource txtBox}" x:Name="theTextBox" MinWidth="{Binding ActualWidth, ElementName=theButton}" Text="{Binding GuidStr, ElementName=root}"/>
    </DockPanel>
</UserControl>
