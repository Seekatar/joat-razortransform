<UserControl x:Class="RazorTransform.NameValueEdit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:my="clr-namespace:RazorTransform.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500" >
    <UserControl.Background>
        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
            <GradientStop Color="LightGray" Offset="0"/>
            <GradientStop Color="#fdd3a8" Offset=".2"/>
            <GradientStop Color="#fce79f" Offset="1"/>
        </LinearGradientBrush>
    </UserControl.Background>
    <Grid>
            <ScrollViewer  Margin="1" VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="1" Name="stackPanel" Margin="0"  Background="Transparent">
                    </StackPanel>
                </Grid>
              
            </ScrollViewer>
      
        
    </Grid>
      

</UserControl>
