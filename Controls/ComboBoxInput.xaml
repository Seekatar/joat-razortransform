<UserControl x:Class="RazorTransform.ComboBoxInput"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Name="root">
    <DockPanel>
        <ComboBox x:Name="theComboBox"  SelectedValue="{Binding ComboBoxStr, ElementName=root}" SelectedValuePath="Key" DisplayMemberPath="Value" ItemsSource="{Binding ComboBoxList, ElementName=root}" Margin="0,0,2,0" VerticalAlignment="Center"/>
    </DockPanel>
</UserControl>