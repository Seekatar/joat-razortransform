<UserControl x:Class="RazorTransform.BoolInput"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Name="root">
    <DockPanel>
        <CheckBox x:Name="theCheckBox"  IsChecked="{Binding Bool, ElementName=root}" Margin="0,0,2,0" VerticalAlignment="Center"/>
    </DockPanel>
</UserControl>
